{
    "name": "nikolaposa/rate-limit",
    "description": "General purpose rate limiter implementation.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "rate limit",
        "redis"
    ],
    "authors": [
        {
            "name": "Nikola PoÅ¡a",
            "email": "posa.nikola@gmail.com",
            "homepage": "https://www.nikolaposa.in.rs"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "beberlei/assert": "^3.2"
    },
    "require-dev": {
        "ext-apcu": ">=5.1.12",
        "ext-redis": "*",
        "friendsofphp/php-cs-fixer": "^3",
        "phpstan/phpstan": "^1",
        "phpstan/phpstan-beberlei-assert": "^1",
        "phpstan/phpstan-phpunit": "^1",
        "phpunit/phpunit": "^8.0",
        "predis/predis": "^1.1"
    },
    "suggest": {
        "ext-apcu": "In order to use ApcuRateLimiter",
        "ext-memcached": "In order to use MemcachedRateLimiter",
        "ext-redis": "In order to use RedisRateLimiter",
        "predis/predis": "In order to use PredisRateLimiter"
    },
    "autoload": {
        "psr-4": {
            "RateLimit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RateLimit\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
        "static": "phpstan analyse --memory-limit=1G",

        "style:check": "@phpcs --dry-run --format=txt --verbose --diff",
        "style:fix": "@phpcs",

        "test": "phpunit --colors=always",

        "check:all": [
            "@style:fix",
            "@static"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    }
}
